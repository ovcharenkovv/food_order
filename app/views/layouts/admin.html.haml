!!!
%html
  %head
    %title Admin panel
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    .header
      .admin_menu
        = render "admin/dashboard/menu"
    .admin_wrapper
      .content
        .error
          - if notice
            %p#notice= notice
            %p#alert= alert
        = yield