%h1 Listing orders
%table
  %thead
    %tr
      %th E-mail
      %th Order list
      %th

  - @orders.each do |order|
    %tr
      %td=order.user.email
      %td
        = link_to edit_admin_order_path(order) do
          %span.green="#{order.dishes.sum('price')} Грн - "
          =order.created_at.strftime("%A %d %b" )
      %td
        = link_to 'Destroy', admin_order_path(order), :confirm => 'Are you sure?', :method => :delete, :class=>'red'

%br

= link_to 'New Order', new_admin_order_path

