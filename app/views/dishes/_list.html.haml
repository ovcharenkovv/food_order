%table
  %thead
    %tr
      %th Check
      %th Category
      %th Name
      %th Description
      %th Weight
      %th Price


  -# dishes.each do |dish|
  = hidden_field_tag "order[dish_ids][]", ""
  - for dish in Dish.tomorrow_dishes
    %tr{:class=>"color_#{dish.category.id}"}
      %td= check_box_tag "order[dish_ids][]", dish.id, @order.dishes.include?(dish)
      %td= dish.category.name
      %td= dish.name
      %td= dish.description
      %td= dish.weight
      %td= dish.price


